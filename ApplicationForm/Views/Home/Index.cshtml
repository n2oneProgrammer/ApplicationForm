@using NuGet.Protocol
@model ApplicationForm.ViewModel.ApplicationForm

@{
    ViewData["Title"] = "Formularz Zgłoszeniowy";
}

<h1>Formularz Zgłoszeniowy</h1>

<hr/>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" id="name-input" class="form-control"/>
                <span asp-validation-for="Name" id="name-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" id="surname-input" class="form-control"/>
                <span asp-validation-for="Surname" id="surname-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" id="email-input" class="form-control"/>
                <span asp-validation-for="Email" id="email-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthdayDate" class="control-label"></label>
                <input asp-for="BirthdayDate" id="birthday-input" type="Date" class="form-control"/>
                <span asp-validation-for="BirthdayDate" id="birthday-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationId" class="control-label"></label>
                <select asp-for="EducationId" class="form-control" asp-items="ViewBag.EducationId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">List Motywacyjny</label>
                <input type="File" id="LM-file-input" asp-for="File" class="form-control" accept="image/jpeg, application/pdf, application/msword"/>
                <span asp-validation-for="File" id="LM-file-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CV</label>
                <input type="File" asp-for="File" id="CV-file-input" class="form-control" accept="image/jpeg, application/pdf, application/msword"/>
                <span asp-validation-for="File" id="CV-file-error" class="text-danger"></span>
            </div>
            <div id="attached-file-group">
                <label class="control-label">Inne Pliki</label>

            </div>
            <div id="add-attached-file">
                <a>Dodaj Plik</a>
            </div>
            <div class="form-group">
                <label class="control-label">Liczba Odbytych Staży</label>
                <input type="number" id="count-of-internship" class="form-control" value="0" min="0" max="20"/>
            </div>
            <div id="internship-list">

            </div>
            <div class="form-group">
                <input type="submit" value="Wyślij Podanie" id="submit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<script src="/js/Validators.js"></script>
<script src="/js/index.js"></script>